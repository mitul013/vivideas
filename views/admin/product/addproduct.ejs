<div class="row mt-5">
    <div class="col-md-4 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-shapes"></i> Add Product
            </h1>
            <%- include ('../../partials/messages.ejs') %>
                <form action="/admin/product/create" method="post" enctype="multipart/form-data">
                    
                    <div class="form-group">
                        <label for="name">Product ID</label>
                        <input type="productID" id="productID" name="productID" class="form-control"
                            placeholder="Enter ID"
                            value="<%= typeof productID != 'undefined' ? productID : '' %>" />
                    </div>
                    
                    <div class="form-group">
                        <label for="name">Product Name</label>
                        <input type="productName" id="productName" name="productName" class="form-control"
                            placeholder="Enter Name"
                            value="<%= typeof productName != 'undefined' ? productName : '' %>" />
                    </div>

                    <div class="form-group">
                        <label for="email">Image</label>
                        <input type="file" id="productImage" name="productImage" class="form-control" />
                    </div>


                    <button type="submit" class="btn btn-primary btn-block">
                        submit
                    </button>
                </form>
        </div>
    </div>
</div>