<div class="row mt-5">
    <div class="col-md-4 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-shapes"></i> Genrate QR codes
            </h1>
            <%- include ('../../partials/messages.ejs') %>
                <form action="/admin/batch/create" method="post">
                    
                    <div class="form-group">
                        <label for="productId">Product Id</label>
                        <input type="productId" id="productId" name="productId" class="form-control"
                            placeholder="Enter productId"
                            value="<%= typeof productId != 'undefined' ? productId : '' %>" />
                    </div>
                    
                    <div class="form-group">
                        <label for="batchNumber">Batch Number</label>
                        <input type="batchNumber" id="batchNumber" name="batchNumber" class="form-control"
                            placeholder="Enter batch number"
                            value="<%= typeof batchNumber != 'undefined' ? batchNumber : '' %>" />
                    </div>
                    
                    <div class="form-group">
                        <label for="noOfCode">No of QR Codes</label>
                        <input type="noOfCode" id="noOfCode" name="noOfCode" class="form-control"
                            placeholder="Enter no of code"
                            value="<%= typeof noOfCode != 'undefined' ? noOfCode : '' %>" />
                    </div>

                    <div class="form-group">
                        <label for="mfg">Mfg Date</label>
                        <input
                          type="date"
                          name="mfg"
                          class="form-control"
                          value="<%= typeof mfg != 'undefined' ? mfg : '' %>"
                        />
                      </div>

                      <div class="form-group">
                        <label for="exp">EXP Date</label>
                        <input
                          type="date"
                          name="exp"
                          class="form-control"
                          value="<%= typeof exp != 'undefined' ? exp : '' %>"
                        />
                      </div>

                    <button type="submit" class="btn btn-primary btn-block">
                        generate
                    </button>
                </form>
        </div>
    </div>
</div>